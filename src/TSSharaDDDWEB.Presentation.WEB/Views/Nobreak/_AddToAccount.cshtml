@model TSSharaDDDWEB.Presentation.WEB.Models.Nobreak

@{
    ViewBag.Title = "Adicionar nobreak à conta";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Add new Nobreak to Account</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Serial">Serial</label>
            <div class="col-md-10">
                <input name="serialNobreak" class="form-control text-box single-line" />
                <span class="field-validation-valid text-danger" data-valmsg-for="Serial" data-valmsg-replace="true"></span>
                @Html.ValidationMessageFor(model => model.Serial, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="modal-footer">
            <button class="btn" type="button" data-dismiss="modal">Cancel</button>
            <input class="btn btn-primary" type="submit" value="Add" />
        </div>
        @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary pull-right" />
                @Html.ActionLink("Meus Nobreaks", "Index")                
            </div>
        </div>*@
    </div>
}
