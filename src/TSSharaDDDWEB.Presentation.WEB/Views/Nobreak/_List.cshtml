@model IEnumerable<TSSharaDDDWEB.Presentation.WEB.Models.Nobreak>

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Label)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Serial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UPSModel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Version)
        </th>
        <th>
            @*@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Add", "AddToAccount", "Nobreaks", htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })z
            <button id="add-nobreak" type="button" class="btn btn-primary btn-xs glyphicon glyphicon-plus"><span class=''></span></button>*@
