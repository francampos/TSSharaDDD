                        <Button Content="{DynamicResource ValueButtonSettings}" Style="{StaticResource BaseButtonStyle}" Margin="8,342,20,208" Click="Settings_Click" DataContext="{Binding NobreakTSShara.UI.Views.Settings.SettingsView}"/>
